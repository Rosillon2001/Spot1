
<div class="jumbotron mt-4 align-items-center " id="jumboUserMng">

        <div class="d-flex justify-content-center">
            <h2>Datos de la cuenta</h2>
        </div>

        <div class="container">

            <form action="/user/update/{{userData._id}}" method="POST">
                <h5>Nombre de usuario</h5>
                    <div class="form-group">
                        <input type="text" name='username' class="form-control" placeholder="Nombre de usuario" autofocus value="{{userData.username}}">
                    </div>
                <h5>Contraseña</h5>
                    <div class="form-group">
                        <input type="password" name='password' class="form-control" placeholder="Contraseña" value="{{userData.password}}">
                    </div>
                    
                    <br>
                    <div class="d-flex form-group justify-content-center">
                        <button class="btn btn-outline-success" style="background-color:rgb(45, 212, 148); color:black" type="submit">Guardar Cambios</button>
                    </div>

            </form>
            <form class="d-flex form-group justify-content-center" action="/user/logout" method="GET">
                <button class="btn btn-outline-warning" style="background-color:rgb(213, 230, 64); color:black" type="submit">Cerrar Sesion</button>
            </form>
            <form class="d-flex form-group justify-content-center" action="/user/delete/{{userData._id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-outline-danger" style="background-color:rgb(228, 67, 107); color:black" type="submit">Eliminar Cuenta</button>
            </form>

        </div>
        
</div>