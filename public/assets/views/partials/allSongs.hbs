<div class="jumbotron-mt-4">
<div class=" row  row-cols-md-4 " style="padding: 20px;">
{{#each songs }}
   <div class="col">
      <div class="card " style="margin-bottom: 20px;">
      <div class="d-flex justify-content-center bg-dark"><h5 class="card-header " id="noombreCancion" style="color: whitesmoke;">{{name}}</h5></div>
      <div class="card-body ">
         <h5 class="card-title d-flex justify-content-center">{{author}}</h5>
         <p class="card-text d-flex justify-content-center">{{album}}-{{gender}}</p>
         <a href="/playSong/{{name}}" class="btn btn-primary d-flex justify-content-center" id="playBtn">Play<i class="bi bi-play-circle" style="margin-left: 7px;"></i></a>
      </div>
      </div>
   </div>
{{/each}}
</div>
</div>
<script src="../../js/user.js"></script>